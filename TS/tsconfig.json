{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictPropertyInitialization": true,// 控制类字段是否在构造函数中初始化
    "strictNullChecks": true,
    "useDefineForClassFields": true,
  },
  "exclude": [
    "node_modules"
  ]
}